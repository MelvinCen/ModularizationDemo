<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="test.melvin.module_main">

    <application
        android:name="debug.MainApplication"
        android:allowBackup="true"
        tools:replace="label"
        android:label="@string/module_main_app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.melvin.module_main.ui.splash.SplashActivity"
                  android:theme="@style/module_main_fullscreen"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.melvin.module_main.ui.main.MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>